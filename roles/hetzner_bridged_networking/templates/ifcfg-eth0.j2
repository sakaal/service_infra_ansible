DEVICE=eth0
BOOTPROTO=none
ONBOOT=yes
NM_CONTROLLED=no
HWADDR={{ ansible_eth0.macaddress | mandatory }}
BRIDGE=br0
#IPADDR={{ ansible_eth0.ipv4.address | mandatory }}
#NETMASK={{ ansible_eth0.ipv4.netmask | mandatory }}
#SCOPE="peer {{ ansible_default_ipv4.gateway | mandatory }}"
IPV6INIT=yes
IPV6ADDR={{ ansible_default_ipv6.address | mandatory }}/{{ ansible_default_ipv6.prefix | mandatory }}
IPV6_DEFAULTGW={{ ansible_default_ipv6.gateway | mandatory }}
IPV6_DEFAULTDEV={{ ansible_default_ipv6.interface | mandatory }}
